<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder	xmlns:ui="urn:ui:com.google.gwt.uibinder"
				xmlns:g="urn:import:com.google.gwt.user.client.ui"
				xmlns:gwt="urn:import:es.jota.gwt.client.widgets.display">

	<g:HTMLPanel styleName="container-fluid">
		<g:HTMLPanel ui:field="menu">
			<gwt:MenuItem ui:field="editar" text="Editar" grados="180" color="list-group-item-success"/>
			<gwt:MenuItem ui:field="listar" text="Listar" grados="135" color="list-group-item-info"/>
			<gwt:MenuItem ui:field="nuevo" text="Nuevo" grados="90" color="list-group-item-danger"/>
		</g:HTMLPanel>
		<div class="row-fluid">
			<div class="col-md-12">
				<div class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-sm-2 control-label">Nombre</label>
						<div class="col-sm-10">
							<p ui:field="nombre" class="form-control-static"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Descripción</label>
						<div class="col-sm-10">
							<p ui:field="descripcion" class="form-control-static"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Peso por ración</label>
						<div class="col-sm-10">
							<p ui:field="pesoPorRacion" class="form-control-static"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Coste</label>
						<div class="col-sm-10">
							<p ui:field="coste" class="form-control-static"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Unidad de medida</label>
						<div class="col-sm-10">
							<p ui:field="unidadDeMedida" class="form-control-static"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Grupo alimenticio</label>
						<div class="col-sm-10">
							<p ui:field="grupoAlimento" class="form-control-static"/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>