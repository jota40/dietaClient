<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel stylePrimaryName="row-fluid">
		<div class="span11">
			<b:ProgressBar ui:field="progress" type="ANIMATED" color="INFO" percent="0" />
			<div ui:field="progressText" style="text-align: center; margin-top: -40px;  margin-bottom: 20px;" />
		</div>
		<div class="span1">
			<g:Button ui:field="cancel" size="MINI" type="DANGER">x</g:Button>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>